<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.naresh.aselab3.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create Account"
        android:id="@+id/textView_ca"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_fname"
        android:layout_below="@+id/textView_ca"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:hint="First Name*" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_lname"
        android:layout_below="@+id/editText_fname"
        android:layout_alignParentStart="true"
        android:hint="Last Name*" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_email"
        android:layout_below="@+id/editText_lname"
        android:layout_alignParentStart="true"
        android:hint="Email*" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_pwd"
        android:layout_below="@+id/editText_email"
        android:layout_alignParentStart="true"
        android:hint="Password*" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Photo"
        android:id="@+id/button_uploadphoto"
        android:layout_alignBottom="@+id/editText_Dlicence"
        android:layout_toEndOf="@+id/editText_passport" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:id="@+id/button_signup"
        android:onClick="onSignup"
        android:layout_below="@+id/editText_Dlicence"
        android:layout_toStartOf="@+id/button_uploadphoto"
        android:layout_marginTop="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_passport"
        android:hint="Passport No*"
        android:layout_below="@+id/editText_cpwd"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_Dlicence"
        android:hint="Driving Licence"
        android:layout_below="@+id/editText_passport"
        android:layout_alignEnd="@+id/button_signup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_cpwd"
        android:hint="Confirm Password*"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
